    <Directory>example.com/</Directory>
    <ErrorLog>example.com.error.log</ErrorLog>
    <CustomLog>example.com.custom.log</CustomLog>
  </VirtualHost>
  <VirtualHost>
    <ServerName>mylocal.host</ServerName>
    <ServerAlias>www.mylocal.host</ServerAlias>
    <Directory>mylocal.host/</Directory>
    <ErrorLog>mylocal.host.error.log</ErrorLog>
    <CustomLog>mylocal.host.custom.log</CustomLog>
  </VirtualHost>
</VirtualHostsConfiguration>