<?xml version="1.0" encoding="utf-16"?>
<VirtualHostsConfiguration>
  <VirtualHosts>
    <VirtualHost>
      <ServerName>example.com</ServerName>
      <ServerAlias>www.example.com</ServerAlias>
      <Directory>example.com</Directory>
      <ErrorLog>example.com.error.log</ErrorLog>
      <CustomLog>example.com.custom.log</CustomLog>
    </VirtualHost>
    <VirtualHost>
      <ServerName>mylocal.host</ServerName>
      <ServerAlias>www.mylocal.host</ServerAlias>
      <Directory>mylocal.host</Directory>
      <ErrorLog>mylocal.host.error.log</ErrorLog>
      <CustomLog>mylocal.host.custom.log</CustomLog>
    </VirtualHost>
	<VirtualHost>
      <ServerName>s3.localhost</ServerName>
      <ServerAlias>www.s3.localhost</ServerAlias>
      <Directory>s3.localhost</Directory>
    </VirtualHost>
	<VirtualHost>
      <ServerName>s4.localhost</ServerName>
      <ServerAlias>www.s4.localhost</ServerAlias>
      <Directory>s4.localhost</Directory>
	  <AuthenticationConfiguration>
		<Authentication>
		  <AuthType>Basic</AuthType>
		  <AuthName>Secure Directory Access</AuthName>
		  <Directory>/</Directory>
		  <UserName>admin</UserName>
		  <Password>123</Password>
		</Authentication>
	  </AuthenticationConfiguration>
    </VirtualHost>
  </VirtualHosts>
  <DefaultVirtualHost>
    <ServerName>127.0.0.1</ServerName>
    <ServerAlias>localhost</ServerAlias>
    <Directory>localhost</Directory>
    <ErrorLog>localhost.error.log</ErrorLog>
    <CustomLog>localhost.custom.log</CustomLog>
  </DefaultVirtualHost>
</VirtualHostsConfiguration>